<Page x:Class="PotionShop.PagesApp.SalesManagerWorkPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PotionShop.PagesApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SalesManagerWorkPage">

    <Grid>
        <DataGrid x:Name="PotionGrid" AutoGenerateColumns="True" d:ItemsSource="{d:DynamicResource ResourceKey=potions}" IsReadOnly="True" PreviewKeyDown="PotionGrid_PreviewKeyDown" PreviewMouseDoubleClick="PotionGrid_PreviewMouseDoubleClick" />
    </Grid>
</Page>
